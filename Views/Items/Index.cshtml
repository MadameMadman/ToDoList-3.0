<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
  </head>
  <body>
    <h1>To Do List</h1>
    <ul>
      @foreach (var item in Model)
      {
        <li><a href='/items/@item.GetId()'>@item.GetDescription()</a></li>
      }
    </ul>
    <a href ='/items/new'>Add new item</a>
    <form action="/items/delete" method="post">
     <button type="submit" name="button">Clear all items</button>
   </form>
   <h3><a href='/categories'>View categories</a></h3>
   <h3><a href='/categories/new'>Add a new category</a></h3>
  </body>
</html>
